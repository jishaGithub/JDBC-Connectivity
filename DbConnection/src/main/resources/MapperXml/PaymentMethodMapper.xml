<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.laba.db.mybatis.mapper.PaymentMethodMapper">


    <resultMap id="PaymentMethodResultMap" type="com.solvd.laba.db.model.PaymentMethod">
        <id property="id" column="id"/>
        <result property="paymentType" column="payment_type"/>
    </resultMap>

    <select id="getPaymentMethodById" resultMap="PaymentMethodResultMap">
        SELECT id, payment_type
        FROM payment_method
        WHERE id = #{id}
    </select>

    <select id="getAllPaymentMethods" resultMap="PaymentMethodResultMap">
        SELECT id, payment_type
        FROM payment_method
    </select>

    <insert id="insertPaymentMethod">
        INSERT INTO payment_method (id, payment_type)
        VALUES (#{id}, #{paymentType})
    </insert>

    <update id="updatePaymentMethod">
        UPDATE payment_method
        SET payment_type = #{paymentType}
        WHERE id = #{id}
    </update>

    <delete id="deletePaymentMethod">
        DELETE FROM payment_method
        WHERE id = #{id}
    </delete>

</mapper>
